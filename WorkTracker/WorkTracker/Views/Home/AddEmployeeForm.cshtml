
@{
    ViewData["Title"] = "Enter Employee Details";
}

<!-- Default form register -->
<form class="text-center border border-light p-5" asp-action="AddEmployee">

    <p class="h4 mb-4">Enter Employee Details</p>

    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="First name">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Last name">
        </div>
    </div>

    <!-- Job Title -->
    <input type="text" id="defualtRegisterFormText" class="form-control mb-4" placeholder="Job Title">

    <!-- E-mail -->
    <input type="email" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="E-mail">

    <!-- Phone number -->
    <input type="text" id="defaultRegisterPhonePassword" class="form-control" placeholder="Phone number" aria-describedby="defaultRegisterFormPhoneHelpBlock">


    <!-- Sign up button -->
    <button class="btn btn-md btn-outline-info waves-effect my-4 btn-block" type="submit">Submit</button>

</form>
